# OpenAI Configuration
# Required: Your OpenAI API key
OPENAI_API_KEY=your_openai_api_key_here

# Optional: OpenAI model to use (default: gpt-4o)
# Options: gpt-4o, gpt-4, gpt-3.5-turbo
OPENAI_MODEL=gpt-4o

# Optional: Analysis Configuration
# Discrepancy threshold in dollars (default: 2.0)
DISCREPANCY_THRESHOLD=2.0

# Time matching tolerance in seconds (default: 2)
MERGE_TOLERANCE_SECONDS=2

# Optional: Logging Configuration
# Log level: DEBUG, INFO, WARNING, ERROR (default: WARNING)
LOG_LEVEL=WARNING

# Optional: Performance Configuration
# Enable caching (default: true)
ENABLE_CACHE=true

# Cache expiry in hours (default: 24)
CACHE_EXPIRY_HOURS=24